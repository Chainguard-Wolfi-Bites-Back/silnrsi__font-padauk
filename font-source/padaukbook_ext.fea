# --- NOTE on 103C and variants ----------------------------------------
# The source fonts have u103C and variants classed as base glyphs. 
# I have classified them as marks in the GDEF table. 
# They need to be mark glyphs so they can ligate with u102F and u1030 
# across a base glyph (remember u103C is reordered before lookups 
# are applied. Since OTLS zeros out the width of marks, 
# *now they need advance width added* which we do here.

# NB: The autogenerated files have them in the GPOS lookups as base 
# glyphs which generates a non-fatal (glyph order) error.

#-----------------------------------------------------------------------

# Adding advanced width for spacing marks (defined as marks in GDEF)
lookup dist_SpacingMarks {
  lookupflag 0;
    pos u103C <0 0 192 0>;
    pos u103C.alt.narr <0 0 192 0>;
    pos u103C.alt.wide <0 0 192 0>;
    pos u103C.wide <0 0 192 0>;
    pos u103C_u103D.narr <0 0 192 0>;
    pos u103C_u103D.wide <0 0 192 0>;
    pos u103C_u103D.alt.narr <0 0 192 0>;
    pos u103C_u103D.alt.wide <0 0 192 0>;
    pos u103C_u102F.narr <0 0 192 0>;
    pos u103C_u102F.wide <0 0 192 0>;
    pos u103C_u102F.alt.narr <0 0 192 0>;
    pos u103C_u102F.alt.wide <0 0 192 0>;
    pos u103C_u103D.alt.narr.tri <0 0 192 0>;
    pos u103C_u103D.alt.wide.tri <0 0 192 0>;
    pos u103C_u103D.narr.tri <0 0 192 0>;
    pos u103C_u103D.wide.tri <0 0 192 0>;
    # AA70 is a spacing mark in isolated form
    pos uAA70 <0 0 554 0>;
} dist_SpacingMarks; 

lookup dist_dflt_SpacingMarks {
  lookupflag 0;
    pos u103C @cCons' <192 0 192 0>;
    pos u103C.alt.narr @cCons' <192 0 192 0>;
    pos u103C.alt.wide @cCons' <192 0 192 0>;
    pos u103C.wide @cCons' <192 0 192 0>;
    pos u103C_u103D.narr @cCons' <192 0 192 0>;
    pos u103C_u103D.wide @cCons' <192 0 192 0>;
    pos u103C_u103D.alt.narr @cCons' <192 0 192 0>;
    pos u103C_u103D.alt.wide @cCons' <192 0 192 0>;
    pos u103C_u102F.narr @cCons' <192 0 192 0>;
    pos u103C_u102F.wide @cCons' <192 0 192 0>;
    pos u103C_u102F.alt.narr @cCons' <192 0 192 0>;
    pos u103C_u102F.alt.wide @cCons' <192 0 192 0>;
    pos u103C_u103D.narr.tri @cCons' <192 0 192 0>;
    pos u103C_u103D.wide.tri @cCons' <192 0 192 0>;
    pos u103C_u103D.alt.narr.tri @cCons' <192 0 192 0>;
    pos u103C_u103D.alt.wide.tri @cCons' <192 0 192 0>;
    pos uAA70 @cCons' <554 0 554 0>;
} dist_dflt_SpacingMarks;

# Normally u1037 attaches to u103D or u102F. But when the latter two
# become part of a 103C ligature, they become reordered before a 
# consonant and the attachment breaks.
# This 'hack' gets it close to where it should be.
### NB: Some configurations and advance width still need to be adjusted
lookup kern_103Clig_1037 {
  lookupflag 0;
    pos u103C_u103D.narr     [@cCons] [@cUDia] u1037' <345 0 0 0>;
    pos u103C_u103D.narr     [@cCons]          u1037' <345 0 191 0>; #1425
#    pos u103C_u103D.wide     [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u103D.wide     [@cCons]          u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.narr [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.narr [@cCons]          u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.wide [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.wide [@cCons]          u1037' <0 0 0 0>;
    pos u103C_u102F.narr     [u1016]   u1036   u1037' <342 0 187 0>; #1527
    pos u103C_u102F.narr     [@cCons] [@cUDia] u1037' <341 0 187 0>; #1830
    pos u103C_u102F.narr     [@cCons]          u1037' <341 0 0 0>;
#    pos u103C_u102F.wide     [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u102F.wide     [@cCons]          u1037' <0 0 0 0>;
    pos u103C_u102F.alt.narr [u1001]   u102D   u1037' <348 0 193 0>; # BLK #498-99
    pos u103C_u102F.alt.narr [u1015]   u102D   u1037' <342 0 188 0>; # BLK #2017, 4840
    pos u103C_u102F.alt.narr [u1016]   u102D   u1037' <342 0 187 0>; # BLK #2249, 4939
    pos u103C_u102F.alt.narr [u1017]   u102D   u1037' <342 0 187 0>; #1605
    pos u103C_u102F.alt.narr [@cCons] [@cUDia] u1037' <341 0 187 0>; #1805
    pos u103C_u102F.alt.narr [@cCons]          u1037' <341 0 0 0>;
    pos u103C_u102F.alt.wide [@cCons] [@cUDia] u1037' <325 0 174 0>; # 163
    pos u103C_u102F.alt.wide [@cCons]          u1037' <309 0 0 0>;
} kern_103Clig_1037;

lookup dflt_kern_103Clig_1037 {
  lookupflag 0;
    pos u103C_u103D.narr     [@cCons] [@cUDia] u1037' <345 0 191 0>;
    pos u103C_u103D.narr     [@cCons]          u1037' <345 0 191 0>; #1425
    pos u103C_u103D.wide     [@cCons] [@cUDia] u1037' <345 0 191 0>;
    pos u103C_u103D.wide     [@cCons]          u1037' <345 0 191 0>;
#    pos u103C_u103D.alt.narr [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.narr [@cCons]          u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.wide [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u103D.alt.wide [@cCons]          u1037' <0 0 0 0>;
    pos u103C_u102F.narr     [u1016]   u1036   u1037' <342 0 187 0>; #1527
    pos u103C_u102F.narr     [@cCons] [@cUDia] u1037' <341 0 187 0>; #1830
    pos u103C_u102F.narr     [@cCons]          u1037' <341 0 0 0>;
#    pos u103C_u102F.wide     [@cCons] [@cUDia] u1037' <0 0 0 0>;
#    pos u103C_u102F.wide     [@cCons]          u1037' <0 0 0 0>;
    pos u103C_u102F.alt.narr [u1001]   u102D   u1037' <348 0 193 0>; # BLK #498-99
    pos u103C_u102F.alt.narr [u1015]   u102D   u1037' <342 0 188 0>; # BLK #2017, 4840
    pos u103C_u102F.alt.narr [u1016]   u102D   u1037' <342 0 187 0>; # BLK #2249, 4939
    pos u103C_u102F.alt.narr [u1017]   u102D   u1037' <342 0 187 0>; #1605
    pos u103C_u102F.alt.narr [@cCons] [@cUDia] u1037' <341 0 187 0>; #1805
    pos u103C_u102F.alt.narr [@cCons]          u1037' <341 0 0 0>;
    pos u103C_u102F.alt.wide [@cCons] [@cUDia] u1037' <325 0 174 0>; # 163
    pos u103C_u102F.alt.wide [@cCons]          u1037' <309 0 0 0>;
} dflt_kern_103Clig_1037;

#-----------------------------------------------------------------------
# This section deals with 101B and some lower diacritics

# Adding LSB to ensure that the lower diacritic doesn't protrude 
# backwards into a previous cluster.
# Adding RSB to ensure that the next *base* glyph is spaced correctly
lookup dist_101Balt {
  lookupflag 0;
    pos u101B.alt' <100 0 100 0> u103E_u1030' <-90 0 0 0>;
    pos u101B.alt' <88 0 88 0>   u103E_u102F' <-78 0 0 0>;
    pos u101B.alt' <53 0 53 0>   u1030.med'   <-43 0 0 0>;
    pos u101B.alt' <12 0 12 0>   u102F.med'   <-2 0 0 0>;
    
    pos u101B.alt' <12 0 12 0>   [u1032 u1036] u102F.med' <-2 0 0 0>;
} dist_101Balt;
