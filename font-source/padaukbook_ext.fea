# Input sequence is "cons. u102F u1032" with u1032 attaching to the cons.
lookup shift_1032 {
  lookupflag 0;
    pos u100D u102F u1032' <-205 0 0 0>; #MNW #865
    pos u1025 u102F u1032' <-197 0 0 0>; #MNW #3014
    pos u105D u102F u1032' <-197 0 0 0>; #MNW #3104
    pos u103B u102F u1032' <-117 0 0 0>; #MNW #1660
    pos u100F_u100D u102F u1032' <-179 0 0 0>; #BLK #2634
} shift_1032;
